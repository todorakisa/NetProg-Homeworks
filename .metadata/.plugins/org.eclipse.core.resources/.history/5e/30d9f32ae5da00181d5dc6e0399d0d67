package org.elsys.netprog.rest;

import org.json.simple.JSONObject;

public class BulsAndCows {
	private String Id;
	private String RealNumber;
	private boolean success = false;
	private int Cows = 0;
	private int Bulls = 0;
	private int turn  = 0;
	
	public BulsAndCows(String id,String realnumber){
		Id = id;
		RealNumber = realnumber;
	}
	
	public String getId(){
		return Id;
	}
	
	public JSONObject gameAsJson() {
		JSONObject jObject = new JSONObject();		
			
		jObject.put("gameId", Id);
		jObject.put("cowsNumber", Cows);
		jObject.put("bullsNumber", Bulls);
		jObject.put("turnsCount",turn);
		jObject.put("success", success );
		
		return jObject;
	}

}
